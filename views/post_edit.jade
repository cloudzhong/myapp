    fieldset
      legend 修改博客
      div(class="control-group")
          label(class="control-label" , for="title") 标题：
          div(class="controls")
              input(type="text",class="input-xlarge",id="title",name="title",value="#{doc.title}")

      div(class="control-group")
          label(class="control-label" for="tag") 标签：
          div(class="controls")
              input(type="text",class="input-xlarge",id="tag",name="tag",value="#{doc.tag}")
                  
      div(class="control-group")
