doctype html
html
    head
        title= title + "- CloudBlog"
        link(rel='stylesheet', href='//cdn.bootcss.com/bootstrap/3.3.5/css/bootstrap.min.css')
        link(rel='stylesheet', href='/stylesheets/appstyle.css')
    body
        nav(class="navbar navbar-default")
          div(class="container-fluid")
            div(class="navbar-header")
                button(type="button",class="navbar-toggle collapsed",data-toggle="collapse",data-target="#menu",aria-expanded="false")
                    span(class="icon-bar")
                    span(class="icon-bar")
                    span(class="icon-bar")
                a(class="navbar-brand" href="/") CloudBlog
            div(class="collapse navbar-collapse",id="menu")
                ul(class="nav navbar-nav")
                    li(class="active")
                            a(href="/") 
                                首頁
                    if !user
                        li 
                            a(href="/login") 登入
                        li 
                            a(href="/reg") 註冊
                    else
                        li
                            a(href="/users/#{user._id}") #{user.name}
                        li
                            a(href="/users") 用户列表
                        li 
                            a(href="/logout") 登出
        div(id="container",class="container")
            if success
                div(class="alert alert-success")= success
            if error
                div(class="alert alert-danger")= error
                
        div(class="container")
            block content
        
        hr
        footer
            p   <a href="http://www.cloudzhong.com/" target="_blank">Cloud Zhong</a> 2015
    
        script(src="//cdn.bootcss.com/jquery/1.11.3/jquery.min.js")
        script(src="//cdn.bootcss.com/bootstrap/3.3.5/js/bootstrap.min.js")
        //script(src="//cdn.bootcss.com/angular.js/1.4.5/angular.js")
        script(type='text/javascript').
            $(".nav a").on("click", function(){
               $(".nav").find(".active").removeClass("active");
               $(this).parent().addClass("active");
            });
